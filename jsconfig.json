{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "jsx": "react-jsx",
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
  }